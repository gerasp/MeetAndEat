<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/meeting">

    <TextView
        android:id="@+id/meeting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:text="Meeting"
        android:textColor="@color/primary_text"
        android:textSize="25sp"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_above="@+id/meeting_datetime"
        android:layout_toRightOf="@+id/meeting_color"
        android:layout_toEndOf="@+id/meeting_color" />

    <TextView
        android:id="@+id/meeting_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:text="Meeting date"
        android:textColor="@color/secondary_text"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/meeting_color"
        android:layout_alignLeft="@+id/meeting_title"
        android:layout_alignStart="@+id/meeting_title"
        android:layout_marginBottom="9dp" />

    <View
        android:id="@+id/meeting_color"
        android:layout_width="15dp"
        android:layout_height="80dp"
        android:layout_gravity="start|center"
        android:background="@color/primary" />
</RelativeLayout>
