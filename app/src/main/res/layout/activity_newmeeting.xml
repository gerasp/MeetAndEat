<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/darkGrey"
        android:orientation="vertical"
        android:weightSum="3"
        android:padding="@dimen/activity_vertical_margin">
        <android.support.design.widget.TextInputLayout
            style="@style/newMeetingLabel">
            <EditText
                style="@style/newMeetingInput"
                android:focusable="true"
                android:id="@+id/newMeetingTitleInput"
                android:hint="@string/new_meeting_title"
                android:imeActionLabel="@string/action_sign_in" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/newMeetingLabel">
            <EditText
                style="@style/newMeetingInput"
                android:id="@+id/newMeetingLocationInput"
                android:hint="@string/new_meeting_location"
                android:imeActionLabel="@string/new_meeting_location" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/newMeetingLabel">
            <EditText
                style="@style/newMeetingInput"
                android:id="@+id/newMeetingDateInput"
                android:hint="@string/new_meeting_date"
                android:imeActionLabel="@string/new_meeting_date"
                android:inputType="datetime" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/newMeetingLabel">
            <EditText
                style="@style/newMeetingInput"
                android:id="@+id/newMeetingTimeInput"
                android:hint="@string/new_meeting_time"
                android:imeActionLabel="@string/new_meeting_time" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/newMeetingLabel">
            <EditText
                style="@style/newMeetingInput"
                android:id="@+id/newMeetingColorInput"
                android:hint="@string/new_meeting_color"
                android:imeActionLabel="@string/new_meeting_color" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            style="@style/newMeetingLabel">
            <EditText
                style="@style/newMeetingInput"
                android:id="@+id/newMeetingContactsInput"
                android:hint="@string/new_meeting_contacts"
                android:imeActionLabel="@string/new_meeting_contacts" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</android.support.design.widget.AppBarLayout>

