<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/calendarInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_meeting"
        android:textAlignment="center"
        android:layout_margin="@dimen/text_margin"
        android:layout_alignParentBottom="true" />

    <Button
        android:id="@+id/setAlarmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent"
        android:text="@string/set_alarm_button"
        android:textColor="@color/inverted_text"
        android:visibility="visible"
        android:layout_margin="@dimen/button_margin"
        android:layout_above="@id/calendarInfo"/>

    <CalendarView
        android:layout_width="match_parent"
        android:id="@+id/calendar"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/setAlarmButton"/>
</RelativeLayout>