<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendButton"
        android:layout_toStartOf="@+id/sendButton"
        android:hint="@string/send_a_message"
        android:padding="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ImageView
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/messageInput"
        android:contentDescription="@string/send_a_message"
        android:padding="@dimen/appbar_padding_top"
        custom:srcCompat="@drawable/ic_send_black" />

    <ListView
        android:id="@+id/messageList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/messageInput"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/button_margin"
        android:padding="@dimen/button_margin"
        android:rotation="180"
        android:scrollbarStyle="outsideInset"
        android:verticalScrollbarPosition="left" />

    <View
        android:id="@+id/topShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow_down" />

    <View
        android:id="@+id/bottomShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shadow_height"
        android:layout_above="@id/sendButton"
        android:layout_alignBottom="@id/messageList"
        android:background="@drawable/shadow_up" />

</RelativeLayout>