<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:description="@string/title_preferences">

    <PreferenceCategory android:description="@string/account_management">
        <Preference
            android:icon="@drawable/ic_edit"
            android:key="edit_account"
            android:description="@string/edit_account" />

        <Preference
            android:icon="@drawable/ic_delete"
            android:key="delete_account"
            android:description="@string/delete_account" />
        <Preference
            android:icon="@drawable/ic_logout"
            android:key="logout"
            android:description="@string/logout" />
    </PreferenceCategory>

    <Preference
        android:key="copyright"
        android:selectable="false"
        android:summary="@string/copyright" />


</PreferenceScreen>